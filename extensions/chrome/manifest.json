{
  "manifest_version": 3,
  "name": "Preceptor",
  "version": "1.0",
  "description": "Sends active tab info to local AI app securely",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Preceptor"
  }
} 